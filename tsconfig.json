{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "baseUrl": "packages",
    "paths": {
      "@sbercloud/uikit-*": [
        "./*/src"
      ],
      "@sbercloud/uikit-react-*": [
        "./*/src"
      ]
    },
    "target": "es6",
    "lib": ["es2017", "dom", "esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": ["packages", "types"],
  "exclude": ["node_modules", "scripts"]
}
