{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "packages",
    "paths": {
      "@sbercloud/uikit-product-*": [
        "./*/src"
      ],
      "#storybookConstants": ["./storybook/constants"]
    },
    "target": "ES2018",
    "lib": ["es2017", "dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
