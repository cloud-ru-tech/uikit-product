{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "[ci skip] Version bump",
      "registry": "https://nexus.devops.sbercloud.dev/repository/sbercloud-ui/"
    },
    "version": {
      "changelogPreset": "conventional-changelog-sbercloud",
      "ignoreChanges": [
        "**/*.md",
        "**/*.MD",
        "**/*.mdx",
        "**/*.MDX",
        "./scripts/**/*",
        "packages/*/stories/**/*.*",
        "packages/*/__tests__/**/*.*"
      ]
    }
  }
}
